{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "lib": ["es7", "dom"],
        "allowJs": false,
        "removeComments": true,
        "strict": true,
        "resolveJsonModule": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "baseUrl": "./"
    }
}
